{
  "name": "@taildown/compiler",
  "version": "0.1.0",
  "description": "Core compilation engine for Taildown (parser, transformer, renderer)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@taildown/shared": "workspace:*",
    "@types/mdast": "^4.0.0",
    "@codemirror/language": "^6.10.0",
    "@lezer/highlight": "^1.2.0",
    "lucide": "^0.544.0",
    "mdast-util-to-hast": "^13.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.0",
    "unist-util-visit": "^5.0.0",
    "zod": "^4.1.11"
  },
  "keywords": [
    "taildown",
    "compiler",
    "parser",
    "markdown"
  ],
  "license": "MIT"
}
