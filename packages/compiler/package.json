{
  "name": "@taildown/compiler",
  "version": "0.1.0",
  "description": "Core compilation engine for Taildown (parser, transformer, renderer)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:browser": "node build-browser.mjs",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.15.0",
    "@codemirror/commands": "^6.5.0",
    "@codemirror/language": "^6.11.3",
    "@codemirror/lint": "^6.5.0",
    "@codemirror/search": "^6.5.0",
    "@codemirror/state": "^6.4.0",
    "@codemirror/view": "^6.28.0",
    "@lezer/highlight": "^1.2.0",
    "@taildown/shared": "workspace:*",
    "@types/mdast": "^4.0.0",
    "codemirror": "^6.0.1",
    "lucide": "^0.544.0",
    "mdast-util-to-hast": "^13.0.0",
    "mermaid": "^11.12.0",
    "rehype-stringify": "^10.0.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "shiki": "^3.13.0",
    "unified": "^11.0.0",
    "unist-util-visit": "^5.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "esbuild": "^0.19.0"
  },
  "keywords": [
    "taildown",
    "compiler",
    "parser",
    "markdown"
  ],
  "license": "MIT"
}
