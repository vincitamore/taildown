{
  "name": "taildown",
  "version": "0.1.0",
  "private": true,
  "description": "A markup language that extends Markdown with Tailwind CSS-inspired styling directives and component systems",
  "keywords": [
    "markdown",
    "tailwind",
    "markup",
    "compiler",
    "css"
  ],
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "test": "vitest",
    "test:syntax": "vitest syntax-tests",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "typecheck": "pnpm -r typecheck",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "taildown": "node packages/cli/dist/cli.js",
    "td": "node packages/cli/dist/cli.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.11.0"
}

